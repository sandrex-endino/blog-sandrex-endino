<BaseLayout pageTitle={pageTitle}>
  <div class="home-page">
    <h1>Hello there!</h1>
    <p>
      Welcome to my online diary.
    </p>
    <p>
      I'm Sandrex, a caffeine-consumer/any-kind-of-music-enjoyer/swabelicious
      guy who happens to have access to the internet.
    </p>
    <p>
      Enjoy reading my nonsense.
    </p>

    <div class="home-page-links">
      <!-- <span> Connect with me: </span> -->
      <Social platform="github" username="sandrex-endino" />
      //
      <Social platform="linkedin" username="in/sandrex-endino" />
      //
      <Social platform="twitter" username="sandrex53" />
    </div>
  </div>
</BaseLayout>
